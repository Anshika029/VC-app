<!DOCTYPE html>
<html>
    <head>
        <meta charset = "utf-8">
        <title>MS Clone</title>
        <link rel="stylesheet" href="style.css">
        <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
        <script src="/socket.io/socket.io.js" ></script>
        <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
       <script src= "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        <script>
            const meet_id = "<% meetId %>";
           
        </script>
        
    </head>
    <body>
    <!-- <div class="main"> -->
<div class="main" style=" width: 100%;">
  <div class="left">
      <div class="main_video">
        <div id="video-grid"></div>
      </div>
      
        <div class="main_control " >
          <div class="row">
          <div class="meet_link" style="color: white;"></div>
          <div  class="control-button col" style="background-color: red; ">
                <a href="/" style="color: white;"> <i class="fas fa-phone-alt fa-2x" ></i></a>
                
          </div>
          <div onClick="voice()" class="control-button mute-button col" style="background-color: #4a4a4a;color: white; min-width: 60px;">
                <i class="fas fa-microphone "></i>
                  
          </div>
               
          <div  onClick = "video()" class="control-button stop-video col" style="background-color: #4a4a4a; color: white;min-width: 60px;">
                <i class="fas fa-video "></i>
               
          </div>
          
          <div onClick = "chat()" class="control-button chat col" style="background-color:#4a4a4a; color: white;min-width: 60px;">
            <i class="fas fa-comment-alt"></i>
          </div>
          <div onClick = "getLink()" class="control-button link col" style="background-color:#4a4a4a; color: white;min-width: 60px;">
            <i class="fas fa-share-square"></i>
          </div>
          </div>
        </div>
      
      </div>
      
            
  
        <div class="right" >
            <div class="heading">
              <div onclick = "exitMsg()">
                <i class="fas fa-times" style="justify-content: right; display: block; text-align: right; cursor: pointer;"></i>
                </div>
                <h5>In-Call Messages</h5>
                
            </div>
           
            <div class="chat-window">
                <ul class="messages" style="list-style-type:none; padding: 0px; margin: 0px;">

                </ul>
            </div>
            <div class="message-container">
                <input id="chat-message" type="text" placeholder="Send a message">
            </div>
        </div>

        
      <div class="bottom" style="display: none;">
        <input id="input" type="text" />
      </div>
</div>

    <script src="script.js"></script>
   
    </body>
    </html>